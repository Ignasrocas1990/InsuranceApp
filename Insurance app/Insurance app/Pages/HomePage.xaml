<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:plugin="clr-namespace:ProgressRingControl.Forms.Plugin;assembly=ProgressRing.Forms.Plugin"
             xmlns:viewModels="clr-namespace:Insurance_app.ViewModels"
             xmlns:supportClasses1="clr-namespace:Insurance_app.SupportClasses"
             x:DataType="viewModels:HomeViewModel"
             Shell.PresentationMode="Modal"
             x:Class="Insurance_app.Pages.HomePage">
    
    <ContentPage.Resources>
        <ResourceDictionary>
            <supportClasses1:ValueProgressBarConverter x:Key="ValueProgressBar" />
        </ResourceDictionary>
    </ContentPage.Resources>
    

    <StackLayout>
        <StackLayout Padding="20" HorizontalOptions="Center">
            <Switch x:Name="Switch" ThumbColor="Orange" Scale="1.5" Toggled="Switch_OnToggled" IsToggled="{Binding ToggleStateDisplay,Mode=TwoWay}" />
            <Label Text="Step Tracker" TextColor="Black"/>
        </StackLayout>
        
        
        <Grid  VerticalOptions="CenterAndExpand">
            <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
                <Label FontSize="20"
                       Text="{Binding StepsDisplayLabel, StringFormat='{0}% Completed'}" TextColor="Black" />
            </StackLayout>


            <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
                <plugin:ProgressRing HeightRequest="150" RingBaseColor="Orange" RingProgressColor="Black" 
                                      Scale="2" WidthRequest="150"  RingThickness="10"  
                                      Progress="{Binding ProgressBarDisplay 
                                      , Converter={StaticResource ValueProgressBar},Mode=TwoWay}"/>
            </StackLayout>
            <ActivityIndicator x:Name="CircularWait" HorizontalOptions="Center" VerticalOptions="Center" Color="Gray" />

        </Grid>

        <StackLayout VerticalOptions="End" HorizontalOptions="Center"><!-- need to bind to total Text property -->
            <Label FontSize="30" Text="Total Earned" TextColor="Black" />
        </StackLayout>
        
    </StackLayout>
       


    


</ContentPage>